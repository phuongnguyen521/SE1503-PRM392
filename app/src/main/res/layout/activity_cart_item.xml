<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintCartItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/cbCartItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBookImageCart"
        android:layout_width="113dp"
        android:layout_height="153dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/cbCartItem"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_book_example" />

    <TextView
        android:id="@+id/tvBookNameCart"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="@string/book_name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ivBookImageCart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBookPriceCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/book_price"
        android:textColor="#DD2C00"
        app:layout_constraintStart_toEndOf="@+id/ivBookImageCart"
        app:layout_constraintTop_toBottomOf="@+id/tvBookNameCart" />

    <ImageView
        android:id="@+id/ivCartRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toEndOf="@+id/etQuantityCart"
        app:layout_constraintTop_toBottomOf="@+id/tvBookNameCart"
        app:srcCompat="@drawable/ic_baseline_remove_24" />

    <ImageView
        android:id="@+id/ivAddMoreBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/ivBookImageCart"
        app:layout_constraintTop_toBottomOf="@+id/tvBookPriceCart"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <EditText
        android:id="@+id/etQuantityCart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/cart_number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivAddMoreBook"
        app:layout_constraintTop_toBottomOf="@+id/tvBookPriceCart" />

    <View
        android:id="@+id/divider8"
        android:layout_width="409dp"
        android:layout_height="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="29dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBookImageCart" />

    <ImageView
        android:id="@+id/ivRemoveCartItem"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivBookImageCart"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_pop_up_24" />

</androidx.constraintlayout.widget.ConstraintLayout>